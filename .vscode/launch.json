    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug whole_mesh_main",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug-shared/src/apps/Debug/whole_mesh_main.exe",
            "args": [
                "${workspaceFolder}/examples/rectangle.yaml", "-v"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Debug fvm_meshgen",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug-shared/src/apps/Debug/fvm_meshgen.exe",
            "args": [
                "--output",
                "${workspaceFolder}/data", "--gui", "-v"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Debug fvm_partitioner",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug-shared/src/apps/Debug/fvm_partitioner.exe",
            "args": [
                "${workspaceFolder}/data/sample_rect_mesh.msh",
                "4",
                "${workspaceFolder}/data/partitioned"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        }
    ]
}